<!DOCTYPE html>
<html lang="pt-BR" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'BudZap' %></title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@3.5.0/dist/full.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        body {
            font-family: 'Poppins', sans-serif;
        }

        .bg-gradient {
            background: var(--primary-gradient);
        }

        .text-gradient {
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .glassmorphism {
            background: rgba(255, 255, 255, 0.25);
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
            backdrop-filter: blur(4px);
            -webkit-backdrop-filter: blur(4px);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

        .card-zoom {
            transition: transform 0.3s ease-in-out;
        }
        .card-zoom:hover {
            transform: scale(1.05);
        }

        .animate-fade-in {
            animation: fadeIn 0.5s ease-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        .animate-slide-in {
            animation: slideIn 0.5s ease-out;
        }
        @keyframes slideIn {
            from { transform: translateX(-20px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        /* Dark mode styles */
        [data-theme="dark"] {
            --primary-gradient: linear-gradient(135deg, #434343 0%, #000000 100%);
        }
    </style>
    <%- defineContent('head') %>
</head>
<body class="bg-gray-100 dark:bg-gray-900 transition-colors duration-200">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <aside id="sidebar" class="bg-gradient text-white w-64 space-y-6 py-7 px-2 absolute inset-y-0 left-0 transform -translate-x-full md:relative md:translate-x-0 transition duration-200 ease-in-out z-20">
            <div class="flex flex-col items-center mb-8">
                <div class="w-20 h-20 overflow-hidden rounded-full border-2 border-white shadow-lg mb-4">
                    <img src="<%= (user && user.profileImage) || '/img/logo1.jpeg' %>" alt="BudZap Mascot" class="w-full h-full object-cover">
                </div>
                <div class="text-center">
                    <h2 class="text-xl font-semibold"><%= (user && user.name) || 'Visitante' %></h2>
                    <% if (user && user.plan) { %>
                        <div class="mt-2 px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm">
                            <span class="font-medium"><%= user.plan.charAt(0).toUpperCase() + user.plan.slice(1) %></span>
                        </div>
                        <p class="text-xs mt-2 opacity-75">
                            Válido até: <%= new Date(user.validUntil || Date.now()).toLocaleDateString() %>
                        </p>
                    <% } %>
                </div>
            </div>
            <nav>
                <% const navItems = [
                    { href: '/dashboard', icon: 'fas fa-tachometer-alt', text: 'Dashboard' },
                    { href: '/change-plan', icon: 'fas fa-exchange-alt', text: 'Planos' },
                    { href: '/profile', icon: 'fas fa-id-badge', text: 'Perfil' },
                    { href: '/notifications', icon: 'fas fa-bell', text: 'Notificações' },
                    { href: '/whatsapp', icon: 'fab fa-whatsapp', text: 'Instâncias' },
                    { href: '/chat', icon: 'fas fa-comment-dots', text: 'Whatsapp Web' }, // Alterado aqui
                    { href: '/integrations/dashboard', icon: 'fas fa-desktop', text: 'Integrações' },
                    { href: '/banco/extrato', icon: 'fas fa-university', text: 'Conta Bancária' },
                    { href: '/funnels', icon: 'fas fa-chart-line', text: 'Funis' },
                    { href: '/zapvoice/elevenlabs-whatsapp', icon: 'fas fa-microphone', text: 'Gerar Voz' },
                    { href: '/integrations/hospedar', icon: 'fas fa-cloud-upload-alt', text: 'Hospedar Midia' },
                    { href: '/auto-response', icon: 'fas fa-reply-all', text: 'Auto Resposta' },
                    { href: '/whatsapp/mass-message', icon: 'fas fa-bullhorn', text: 'Spam de mensagens' },
                    { href: '/group', icon: 'fas fa-users-cog', text: 'Gerenciar grupos' }
                ] %>
                <% navItems.forEach(item => { %>
                    <a href="<%= item.href %>" class="flex items-center space-x-3 px-4 py-3 rounded transition duration-200 hover:bg-white hover:bg-opacity-20">
                        <i class="<%= item.icon %> text-2xl"></i>
                        <span class="animate-slide-in"><%= item.text %></span>
                    </a>
                <% }) %>
            </nav>
        </aside>

        <!-- Content area -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Navbar -->
            <div class="navbar glassmorphism sticky top-0 z-30">
                <div class="flex-none lg:hidden">
                    <button id="sidebarToggle" class="text-gray-600 hover:text-gray-800 focus:outline-none" aria-label="Toggle sidebar">
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                </div> 
                <div class="flex-1 px-2 mx-2">
                    <span class="text-xl font-bold text-gradient"><%= typeof title !== 'undefined' ? title : 'BudZap' %></span>
                </div>
                <div class="flex-none">
                    <!-- Add navbar elements here if needed -->
                </div>
            </div>

            <!-- Main content -->
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 dark:bg-gray-800 p-6">
                <!-- Breadcrumb -->
                <nav class="text-gray-500 dark:text-gray-400 text-sm mb-4" aria-label="Breadcrumb">
                    <ol class="list-none p-0 inline-flex">
                        <li class="flex items-center">
                            <a href="/" class="hover:text-gray-700 dark:hover:text-gray-200">Home</a>
                            <svg class="fill-current w-3 h-3 mx-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"/></svg>
                        </li>
                        <li class="flex items-center">
                            <span class="text-gray-700 dark:text-gray-200" aria-current="page"><%= typeof title !== 'undefined' ? title : 'Page' %></span>
                        </li>
                    </ol>
                </nav>

                <div class="animate-fade-in">
                    <%- body %>
                </div>
                
                <footer class="bg-white dark:bg-gray-800 text-center p-4 mt-8 rounded-lg shadow">
                    <p class="text-gray-600 dark:text-gray-400">&copy; 2024 BudZap. Todos os direitos reservados.</p>
                </footer>
            </main>
        </div>
    </div>

    <%- defineContent('scripts') %>
    <script>
        // Sidebar toggle logic
        const sidebar = document.getElementById('sidebar');
        const sidebarToggle = document.getElementById('sidebarToggle');
        const content = document.querySelector('.flex-1');

        sidebarToggle.addEventListener('click', function() {
            sidebar.classList.toggle('-translate-x-full');
            content.classList.toggle('md:ml-64');
        });

        // Close sidebar when clicking outside of it on mobile
        document.addEventListener('click', function(event) {
            const isClickInsideSidebar = sidebar.contains(event.target);
            const isClickOnToggle = sidebarToggle.contains(event.target);
            
            if (!isClickInsideSidebar && !isClickOnToggle && window.innerWidth < 768) {
                sidebar.classList.add('-translate-x-full');
                content.classList.remove('md:ml-64');
            }
        });

        // Adjust layout on window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 768) {
                sidebar.classList.remove('-translate-x-full');
                content.classList.add('md:ml-64');
            } else {
                sidebar.classList.add('-translate-x-full');
                content.classList.remove('md:ml-64');
            }
        });

        // Theme toggle
        const themeToggle = document.getElementById('themeToggle');
        themeToggle.addEventListener('click', function() {
            document.documentElement.setAttribute('data-theme', 
                document.documentElement.getAttribute('data-theme') === 'light' ? 'dark' : 'light'
            );
        });
    </script>
</body>
</html>